doctype html
html
  head
    title= title
    include mixins
    link(href='/css/bootstrap.min.css', rel='stylesheet')
  body
    nav.navbar.navbar-default.navbar-static-top
      .container-fluid
        .navbar-brand My brand
        ul.nav.navbar-nav
          li.active
            a(href="#") Home
          li
            a(href="#") Catalogue

    .container
      .col-md-2
        ul.nav.nav-pills.nav-stacked
          each usr in database
            -if (usr.id == id){
             li.active
               a(href="/user/"+usr._id)= usr._id
            -}else{
              li
               a(href="/user/"+usr._id)= usr._id
            -}
      .col-md-10
        each msg in msgs
          .container-messages
            -if (msg.important){
            .alert.alert-danger
              p= msg.text
            -}else{
            .alert.alert-info
              p= msg.text
            -}
        .input-group
          span#user.input-group-addon= id 
          input#text(type="text", name="reply-text").form-control
          span.input-group-btn
            button#snd(type="button").btn.btn-dafault Send!
              
    include scripts

